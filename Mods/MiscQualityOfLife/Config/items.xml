<configs>
    <!-- If you want to change the unread books icon, here is how to do it -->
    <!-- <set xpath="/items/item[@name='schematicMaster']/property[@name='ItemTypeIcon']/@value">add</set> -->
    <set xpath="/items/item[@name='schematicMaster']/property[@name='AltItemTypeIcon']/@value">check</set>
    <insertAfter xpath="/items/item[@name='schematicMaster']/property[@name='AltItemTypeIcon']">
        <property name="AltItemTypeIconColor" value="128,256,128,128" />
    </insertAfter>

    <!-- Reduce time to scrap brass - this is 1/4 of the original value -->
    <set xpath="/items/item[@name='resourceScrapBrass']/property[@name='CraftingIngredientTime']/@value">0.05</set>

    <!-- Make vehicles sellable to traders -->
    <set xpath="/items/item[@name='vehicleMinibikePlaceable']/property[@name='SellableToTrader']/@value">true</set>
</configs>